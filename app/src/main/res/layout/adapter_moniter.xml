<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1270dp"
    android:layout_height="50dp">

    <TextView
        android:id="@+id/moniter_tv_pacDate"
        android:layout_width="140dp"
        android:layout_height="46dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:gravity="center"
        android:text="포장일자"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/moniter_tv_lotno"
        android:layout_width="150dp"
        android:layout_height="46dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:gravity="center"
        android:text="LOT 식별표"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/moniter_tv_pacDate"
        app:layout_constraintStart_toEndOf="@+id/moniter_tv_pacDate"
        app:layout_constraintTop_toTopOf="@+id/moniter_tv_pacDate"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/moniter_tv_plan"
        android:layout_width="140dp"
        android:layout_height="46dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:gravity="center"
        android:text="수주계획"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/moniter_tv_pacDate"
        app:layout_constraintStart_toEndOf="@+id/moniter_tv_lotno"
        app:layout_constraintTop_toTopOf="@+id/moniter_tv_pacDate"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/moniter_tv_custNm"
        android:layout_width="200dp"
        android:layout_height="46dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:gravity="center"
        android:text="업체명"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/moniter_tv_pacDate"
        app:layout_constraintStart_toEndOf="@+id/moniter_tv_plan"
        app:layout_constraintTop_toTopOf="@+id/moniter_tv_pacDate"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/moniter_tv_itemNm"
        android:layout_width="200dp"
        android:layout_height="46dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:gravity="center"
        android:text="제품명"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/moniter_tv_pacDate"
        app:layout_constraintStart_toEndOf="@+id/moniter_tv_custNm"
        app:layout_constraintTop_toTopOf="@+id/moniter_tv_pacDate"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/moniter_tv_spec"
        android:layout_width="150dp"
        android:layout_height="46dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:gravity="center"
        android:text="규격"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/moniter_tv_pacDate"
        app:layout_constraintStart_toEndOf="@+id/moniter_tv_itemNm"
        app:layout_constraintTop_toTopOf="@+id/moniter_tv_pacDate"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/moniter_tv_unit"
        android:layout_width="110dp"
        android:layout_height="46dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:gravity="center"
        android:text="단위"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/moniter_tv_pacDate"
        app:layout_constraintStart_toEndOf="@+id/moniter_tv_spec"
        app:layout_constraintTop_toTopOf="@+id/moniter_tv_pacDate"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/moniter_tv_amt"
        android:layout_width="150dp"
        android:layout_height="46dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:gravity="center|right"
        android:text="수량"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/moniter_tv_pacDate"
        app:layout_constraintStart_toEndOf="@+id/moniter_tv_unit"
        app:layout_constraintTop_toTopOf="@+id/moniter_tv_pacDate"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>