<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/workprocess_tv_itemnm"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:background="@color/cardview_dark_background"
        android:gravity="center"
        android:text="제품명"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/workprocess_tv_instdate"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:background="@color/cardview_dark_background"
        android:gravity="center"
        android:text="지시일자"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/workprocess_tv_itemnm"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/workprocess_tv_delidate"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:background="@color/cardview_dark_background"
        android:gravity="center"
        android:text="납품요구일"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/workprocess_tv_instdate"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/workprocess_tv_lotno"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:background="@color/cardview_dark_background"
        android:gravity="center"
        android:text="LOTNO"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/workprocess_tv_delidate"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/workprocess_tv_flowcount"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:background="@color/cardview_dark_background"
        android:gravity="center"
        android:text="공정수"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/workprocess_tv_lotno"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/workprocess_tv_instamt"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:background="@color/cardview_dark_background"
        android:gravity="center"
        android:text="지시수량"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/workprocess_tv_flowcount"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/workprocess_tv_inputamt"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:background="@color/cardview_dark_background"
        android:gravity="center"
        android:text="생산수량"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/workprocess_tv_instamt"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/workprocess_tv_inputper"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:background="@color/cardview_dark_background"
        android:gravity="center"
        android:text="생산완료율"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/workprocess_tv_inputamt"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
