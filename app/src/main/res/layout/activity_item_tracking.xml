<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1281dp"
    android:layout_height="611dp">

    <LinearLayout
        android:layout_width="1279dp"
        android:layout_height="609dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="68dp">

            <TextView
                android:id="@+id/itemTracking_lv_unit_nm"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="단위 :"
                android:textColor="@color/cardview_light_background"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/itemTracking_tv_Cust_nm"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/itemTracking_tv_Cust_nm"
                android:layout_width="250dp"
                android:layout_height="30sp"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/itemTracking_lv_Cust_nm"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="23dp"
                android:text="바코드"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/itemTracking_et_barcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginLeft="28dp"
                android:ems="10"
                android:inputType="numberDecimal"
                android:text=""

                app:layout_constraintBottom_toBottomOf="@+id/textView10"
                app:layout_constraintStart_toEndOf="@+id/textView10"
                app:layout_constraintTop_toTopOf="@+id/textView10" />

            <Button
                android:id="@+id/itemTracking_btn_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginLeft="27dp"
                android:text="제품조회"
                app:layout_constraintBottom_toBottomOf="@+id/itemTracking_et_barcode"
                app:layout_constraintStart_toEndOf="@+id/itemTracking_et_barcode"
                app:layout_constraintTop_toTopOf="@+id/itemTracking_et_barcode" />

            <TextView
                android:id="@+id/itemTracking_CompleteYn"
                android:layout_width="100dp"
                android:layout_height="30sp"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/itemTracking_lv_CompleteYn"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/itemTracking_lv_CompleteYn"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginStart="28dp"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="완료여부 : "
                android:textColor="@color/cardview_light_background"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/itemTracking_btn_search"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/itemTracking_lv_Cust_nm"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="구매처 : "
                android:textColor="@color/cardview_light_background"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/itemTracking_CompleteYn"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/itemTracking_tv_unit_nm"
                android:layout_width="100dp"
                android:layout_height="30sp"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/itemTracking_lv_unit_nm"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout8"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/itemTracking_tv_list"
                    android:layout_width="150dp"
                    android:gravity="center"
                    android:text="작업항목"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="24sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/itemTracking_tv_date"
                    android:layout_width="300dp"
                    android:layout_height="35sp"
                    android:layout_marginStart="1dp"
                    android:layout_marginLeft="1dp"
                    android:gravity="center"
                    android:text="등록일자"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="24sp"
                    app:layout_constraintStart_toEndOf="@+id/itemTracking_tv_list"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/itemTracking_tv_detail"
                    android:layout_width="240dp"
                    android:layout_height="35sp"
                    android:layout_marginStart="1dp"
                    android:layout_marginLeft="1dp"
                    android:gravity="center"
                    android:text="세부항목"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="24sp"
                    app:layout_constraintStart_toEndOf="@+id/itemTracking_tv_date"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/itemTracking_tv_spec"
                    android:layout_width="180dp"
                    android:layout_height="35sp"
                    android:layout_marginStart="1dp"
                    android:layout_marginLeft="1dp"
                    android:gravity="center"
                    android:text="규격"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="24sp"
                    app:layout_constraintStart_toEndOf="@+id/itemTracking_tv_detail"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/itemTracking_tv_amt"
                    android:layout_width="250dp"
                    android:layout_height="35sp"
                    android:layout_marginStart="1dp"
                    android:layout_marginLeft="1dp"
                    android:gravity="center"
                    android:text="소요수량"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="24sp"
                    app:layout_constraintStart_toEndOf="@+id/itemTracking_tv_spec"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/itemTracking_tv_fault"
                    android:layout_width="150dp"
                    android:layout_height="35sp"
                    android:layout_marginStart="1dp"
                    android:layout_marginLeft="1dp"
                    android:gravity="center"
                    android:text="불량수"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="24sp"
                    app:layout_constraintStart_toEndOf="@+id/itemTracking_tv_amt"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <GridView
                android:id="@+id/itemTracking_gv_grid"
                android:layout_width="1277dp"
                android:layout_height="420dp"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="110dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout8"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>