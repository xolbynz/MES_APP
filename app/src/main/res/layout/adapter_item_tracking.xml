<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1269dp"
    android:layout_height="40dp">

    <TextView
        android:id="@+id/itemTracking_tv_list"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:text="작업항목"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemTracking_tv_date"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:text="등록일자"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/itemTracking_tv_list"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemTracking_tv_detail"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:text="세부항목"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/itemTracking_tv_date"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemTracking_tv_spec"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:text="규격"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/itemTracking_tv_detail"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemTracking_tv_unit_nm"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:text="lotNo"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/itemTracking_tv_spec"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemTracking_tv_amt"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:text="소요수량"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/itemTracking_tv_unit_nm"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemTracking_tv_fault"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:text="불량수"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/itemTracking_tv_amt"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>